<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5pt"
        tools:context=".MainActivity"
        android:background="@color/gray"
>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:ems="10"
            android:maxLength="20"
            android:inputType="none"
            android:focusable="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/ShowNumber"
            android:baselineAligned="true"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:id="@+id/bt7"
                    android:background="@color/white"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:id="@+id/bt8"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:id="@+id/bt9"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:background="@color/orange"
                    android:text="/"
                    android:textSize="20sp"
                    android:layout_marginBottom="1pt"
                    android:textColor="@color/white"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:onClick="btOpEvent"
                    android:id="@+id/btdiv"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <Button
                    android:text="4"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginRight="1pt"
                    android:background="@color/white"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/bt4"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:text="5"
                    android:layout_marginRight="1pt"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/bt5"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:text="6"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:textSize="20sp"
                    android:layout_marginRight="1pt"
                    android:background="@color/white"
                    android:layout_height="30pt"
                    android:id="@+id/bt6"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:background="@color/orange"
                    android:text="*"
                    android:layout_weight="1"
                    android:layout_marginBottom="1pt"
                    android:textColor="@color/white"
                    android:layout_width="30pt"
                    android:textSize="20sp"
                    android:layout_height="30pt"
                    android:id="@+id/btMul"
                    android:onClick="btOpEvent"/>
        </TableRow>
        <TableRow android:layout_width="wrap_content"
                  android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:background="@color/white"
                    android:id="@+id/bt1"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:text="2"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:textSize="20sp"
                    android:layout_marginRight="1pt"
                    android:background="@color/white"
                    android:layout_height="30pt"
                    android:id="@+id/bt2"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:text="3"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginRight="1pt"
                    android:background="@color/white"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/bt3"
                    android:onClick="btNumberEvent"/>
            <Button
                    android:background="@color/orange"
                    android:text="-"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginBottom="1pt"
                    android:textColor="@color/white"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btMinus"
                    android:onClick="btOpEvent"/>
        </TableRow>
    </TableLayout>
    <TableRow
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <Button
                android:text="0"
                android:textSize="20sp"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:id="@+id/bt0"
                android:layout_marginRight="1pt"
                android:background="@color/white"
                android:layout_weight="1"
                android:onClick="btNumberEvent"/>
        <Button
                android:text="."
                android:textSize="20sp"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:background="@color/white"
                android:id="@+id/btDot"
                android:layout_weight="1"
                android:onClick="btNumberEvent"/>
        <Button
                android:background="@color/orange"
                android:textColor="@color/white"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:id="@+id/btPlusOrMinus"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:text="+/-"
                android:onClick="btNumberEvent"/>
        <Button
                android:background="@color/orange"
                android:text="+"
                android:textColor="@color/white"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginBottom="1pt"
                android:id="@+id/btPlus"
                android:textSize="20sp"
                android:layout_weight="1"
                android:onClick="btOpEvent"/>
    </TableRow>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <Button
                android:textColor="@color/white"
                android:background="@color/red"
                android:text="C"
                android:layout_width="55pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:id="@+id/btClear"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:onClick="btClear"/>
        <Button
                android:background="@color/orange"
                android:text="%"
                android:textColor="@color/white"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginBottom="1pt"
                android:layout_marginRight="1pt"
                android:id="@+id/btPercent"
                android:textSize="20sp"
                android:layout_weight="1"
                android:onClick="btOpEvent"
                />
        <Button
                android:background="@color/green"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:id="@+id/btEquals"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:text="="
                android:onClick="btEqualEvent"
        />

    </LinearLayout>
    </LinearLayout>